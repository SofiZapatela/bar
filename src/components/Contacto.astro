<section id="contacto" class="w-full py-20" style="background-color: #5d767f;">
  <h2 class="text-center text-white text-3xl font-medium mb-12">
    ¿ALGUNA DUDA? ACÁ ESTAMOS
  </h2>

  <div class="max-w-2xl mx-auto px-4">

    <!-- CONTENEDOR COMPLETO DEL FORM -->
    <form class="border border-white">

      <!-- FILA 1 -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <input 
          type="text" 
          placeholder="Nombre"
          class="bg-transparent text-white px-4 py-4 border-b border-white md:border-b md:border-r placeholder-white/70 outline-none"
        />
        <input 
          type="text" 
          placeholder="Apellido"
          class="bg-transparent text-white px-4 py-4 border-b border-white placeholder-white/70 outline-none"
        />
      </div>

      <!-- FILA 2 -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <input 
          type="email" 
          placeholder="Email"
          class="bg-transparent text-white px-4 py-4 border-b border-white md:border-b md:border-r placeholder-white/70 outline-none"
        />
        <input 
          type="text" 
          placeholder="WhatsApp"
          class="bg-transparent text-white px-4 py-4 border-b border-white placeholder-white/70 outline-none"
        />
      </div>

      <!-- FILA MENSAJE -->
      <textarea 
        placeholder="¿En qué podemos ayudarte?"
        rows="4"
        class="bg-transparent text-white px-4 py-4 w-full placeholder-white/70 outline-none"
      ></textarea>

    </form>

    <!-- BOTÓN -->
    <div class="flex justify-center pt-8">
      <button 
        type="submit"
        class="bg-white text-black tracking-[0.3em] px-10 py-3 font-semibold hover:bg-white/80 transition"
      >
        ENVIAR
      </button>
    </div>

  </div>
</section>
